<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="displays.TopControlsDisplay">
    <padding>
        <Insets bottom="10.0" top="10.0" />
    </padding>
    <Label contentDisplay="RIGHT" text="Board size:">
        <graphic>
            <Spinner fx:id="boardSizeSpinner" />
        </graphic>
    </Label>
    <Button mnemonicParsing="false" text="New Board" onAction="#newBoardHandler" />
    <Button mnemonicParsing="false" text="Solve Board" onAction="#solveBoardHandler" />
</HBox>
