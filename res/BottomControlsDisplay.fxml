<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.112"
      fx:controller="controllers.BottomControlsController"
      alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" top="10.0"/>
    </padding>
    <Label contentDisplay="RIGHT" text="Matched words:" managed="false" fx:id="matchedWordsLabel">
        <graphic>
            <ComboBox fx:id="matchesComboBox" onAction="#onMatchesComboBoxAction"/>
        </graphic>
    </Label>
    <Label contentDisplay="RIGHT" text="Matched words:" fx:id="noMatchedWordsLabel">
        <graphic>
            <ComboBox disable="true" fx:id="noMatchesComboBox"/>
        </graphic>
    </Label>
</HBox>
